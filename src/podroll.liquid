<style>
	.podroll {
		max-inline-size: unset;
		margin-block-start: var(--s12);
	}
	.podroll__item {
		border-block-start: var(--delineation);
		display: grid;
		gap: var(--s6);
		grid-template-columns: auto 1fr;
		margin-block-end: unset;
		padding-block: var(--s0);
		padding-inline: var(--s0);
		&:last-child {
			border-block-end: var(--delineation);
		}
	}
	@media (hover: hover) {
		.podroll__item:hover {
			background-color: oklch(from var(--color-fg) l c h / 3%);
			background-color: var(--color-border);
			border-block-color: transparent;
			border-radius: var(--s0);
		}
		.podroll__item:hover + .podroll__item {
			border-block-start-color: transparent;
		}
	}
	.podroll__lp {
		--sleeve-width: min(var(--s8), 100svh);
		display: grid;
		grid-template-columns: auto 1fr;
		grid-template-rows: auto;
		place-items: center;
		transform: translateX(calc(var(--sleeve-width) * 0.06));
		transition: 600ms transform var(--ease-in-out-circ);
	}
	.podroll__item:is(:focus-visible, :hover) {
		.podroll__lp_sleeve {
			transform: translateX(-6%);
		}
		.podroll__lp_disc {
			transform: translateX(42%) rotate(calc(0.48turn / pi));
		}
	}
	.podroll__lp_sleeve,
	.podroll__lp_disc {
		grid-column: 1 / -1;
		grid-row: 1 / -1;
		transform: translateX(0);
		transition: 600ms transform var(--ease-in-out-circ);
		box-shadow: 0 0px 6px oklch(0% 0 0 / 20%);
	}
	.podroll__lp_sleeve {
