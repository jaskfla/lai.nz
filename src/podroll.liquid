<ul class='podroll' role='list'>
	{%- for show in shows %}
		{%- capture img_path -%}
			{%- if show.img_basename -%}
				{%- assign basename = show.img_basename -%}
			{%- else -%}
				{%- assign basename = show.name | slugify -%}
			{%- endif -%}
			/images/cover-art/podcasts/{{ basename }}.{{ show.img_extension }}
		{%- endcapture -%}
		<li
			class='podroll__item'
			style="
				--disc-color: {{ show.disc_color }};
				--label-color: {{ show.label_color }};
				--thumb: url('{{ img_path }}');
			"
		>
			<a
				class='podroll__lp'
				href='{{ show.url }}'
				rel='external nofollow'
				target='_blank'
				tabindex='-1'
			>
				<div aria-hidden class='podroll__lp_disc'>
					<img
						eleventy:widths='34,67'
						alt=''
						aria-hidden
						class='podroll__lp_disc-label'
						src='{{ img_path }}'
					>
				</div>
				<img
					eleventy:widths='160,320,480,640'
					alt='{{ show.name }}'
					aria-hidden
					class='podroll__lp_sleeve'
					src='{{ img_path }}'
				>
			</a>
			<div>
				<h2 class='podroll__show-name'>
					<a href='{{ show.url }}' rel='external nofollow' target='_blank'>
						{{- show.name -}}
					</a>
				</h2>
				{%- if show.commentary %}
					<p class='podroll__show-commentary'>{{ show.commentary }}</p>
				{%- endif %}
			</div>
		</li>
	{%- endfor %}
</ul>
