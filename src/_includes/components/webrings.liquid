<section class='safe-column webrings' id='webrings'>
	<style>
		@layer template {
			.webrings {
				padding-block-end: var(--s11);
			}
			.webrings > .landing__safe-area {
				display: grid;
			}
			.webrings__list {
				column-gap: var(--s-2);
				display: grid;
				grid-template-columns: 100%;
				row-gap: var(--s1);
			}
			.webrings__ring {
				align-items: baseline;
				column-gap: var(--s-4);
				display: grid;
				grid-column: 1 / -1;
				grid-template-columns: max-content minmax(var(--s2), 1fr) repeat(3, max-content);
			}
			.webrings__ring:hover {
				border-block-end-color: var(--color-border);
			}
			.webrings__ring :not([unavailable]) {
				color: var(--color-fg);
				font-weight: normal;
				line-height: inherit;
			}
			.webrings__ring :where(nav, .webrings__ring_pending-overlay) {
				grid-column: 3 / -1;
				grid-row: 1 / 2;
			}
			.webrings__ring nav {
				display: grid;
				grid-template-columns: subgrid;
			}
			.webrings__ring_name {
				font-weight: normal;
				color: unset;
			}
			:is(.webrings__ring_prev, .webrings__ring_rand, .webrings__ring_next) {
				padding-inline: 0.5ch;
			}
			.webrings__ring[data-pending] .webrings__ring_name::after {
				color: var(--color-fg-2);
				content: '*';
				font-variant-position: super;
				margin-inline-start: 0.1em;
			}
			.webrings__ring_pending-overlay {
				--blur-radius: 0.2em;
				align-self: center;
				backdrop-filter: blur(var(--blur-radius));
				block-size: calc(100% + 4 * var(--blur-radius));
				color: var(--color-fg-2);
				display: flex;
				cursor: not-allowed;
				justify-self: stretch;
				opacity: 0;
				overflow: visible;
				place-content: center;
				place-items: center;
				transition-property: backdrop-filter, filter, opacity;
				transition: 200ms ease;
				&:hover {
					opacity: 1;
				}
				&:not(:hover) {
					filter: blur(var(--blur-radius));
				}
			}
			.webrings .pending-note {
				color: var(--color-fg-2);
				font-size: var(--s-1);
				font-style: italic;
				grid-column: 1 / -1;
				letter-spacing: 0.015em;
				margin-block-start: var(--s0);
				&::before {
					content: '*';
					font-style: normal;
					margin-inline-end: 0.2em;
				}
			}
		}
	</style>
