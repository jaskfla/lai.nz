<header>
	<style>
		header {
			align-items: center;
			font-weight: 400;
			inline-size: 100%;
			padding-block: 1.25rem;
			padding-left: var(--top-level-padding-left);
			padding-right: var(--top-level-padding-right);
		}

		.header__safe-area {
			display: flex;
			flex-direction: row;
			inline-size: var(--content-width);
			justify-content: space-between;
			margin-inline: auto;
		}

		.header__logo {
			transition: opacity 200ms var(--transition-fn);
		}
		.header__logo:hover {
			opacity: 50%;
		}

		.header__navigation {
			align-items: baseline;
			display: block flex;
			gap: 1rem 2rem;
		}

		.header__navigation_link {
			color: var(--color-fg);
			text-decoration: none;
		}
		.header__navigation_link[unavailable] {
			opacity: 50%;
		}
		.header__navigation_link:hover:not([unavailable]) {
			color: var(--color-fg-2);
		}
	</style>
	<div class="header__safe-area">
		<a class="header__logo" href="/">
			<picture>
				<source
					media="(prefers-color-scheme: light)"
					srcset="/images/avatar.svg"
				/>
				<source
					media="(prefers-color-scheme: dark)"
					srcset="/images/avatar~dark.svg"
				/>
				<source
					media="print or ((prefers-color-scheme: light) and (prefers-contrast: more))"
					srcset="/images/avatar~light~contrast.svg"
				/>
				<source
					media="(prefers-color-scheme: dark) and (prefers-contrast: more)"
					srcset="/images/avatar~dark~contrast.svg"
				/>
				<img
					alt="Line drawing of the front profile of Jasper’s face. It depicts an oval face shape and short hair; all other facial features, including eyes, are omitted."
					decoding="async"
					src="/images/avatar.svg"
					width="24"
					height="24"
				/>
			</picture>
		</a>
		<nav class="header__navigation">
			{% comment %} <a class="header__navigation_link" title="Still workin’ on this" unavailable>About</a> {% endcomment %}
			<a class="header__navigation_link" href="/now">Now</a>
			<a class="header__navigation_link" href="/collections">Collections</a>
			<a class="header__navigation_link" title="Blog under construction!" unavailable>Notes</a>
			<a class="header__navigation_link" href="/work" hidden unavailable>Work</a>
		</nav>
	</div>
</header>
