<figure class='hero'>
	<style>
		section.hero {
			display: flex;
			justify-content: center;
		}
		figure.hero {
			flex-shrink: 0;
			position: relative;
			width: 100%;
		}
		figure.hero img {
			max-height: 85dvh;
			min-height: 33dvh;
			object-fit: cover;
			width: 100%;
		}
		figure.hero figcaption {
			color: var(--color-fg-2);
			font-size: var(--s-1);
			letter-spacing: 0.015em;
			line-height: 1.25;
			margin-block: var(--s0) var(--s6);
			margin-left: var(--safe-padding-left);
			margin-right: var(--safe-padding-right);
			text-align: end;

			@media (min-width: 40rem) {
				inset-block-end: 0;
				inset-inline-end: 0;
				position: absolute;

				-webkit-backdrop-filter: var(--bg-blur);
				backdrop-filter: var(--bg-blur);
				background-color: var(--color-bg-vibrant);
				border-radius: var(--s-5);
				border: var(--delineation);
				color: var(--color-fg);
				inline-size: fit-content;
				margin-block: var(--s0);
				padding-block: var(--s-5);
				padding-inline: var(--s-1);
			}
			&::after {
				content: ' ♥'; /* nonbreaking */
			}
		}
	</style>
	<img
		eleventy:widths='320,500,640,750,1600,1800,1920,2048,2560,3840,4610'
		alt='An Asian adult walking down a marble staircase outside an art gallery.'
		src='/images/hero.avif'
	>
	<figcaption>Thanks to Jeramy&nbsp;B. for this oddly fancy photo of me</figcaption>
</figure>
