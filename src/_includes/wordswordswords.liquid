---
layout: main.liquid
---

<section class="wordswordswords">
	<style>
		@layer template {
			.wordswordswords {
				padding-left: var(--top-level-padding-left);
				padding-right: var(--top-level-padding-right);
			}

			.wordswordswords__safe-area {
				font-size: 1.35rem;
				inline-size: 100%;
				line-height: 1.5;
				margin-inline: auto;
				max-inline-size: var(--content-width);
				padding-block: 8rem;
			}

			.wordswordswords :where(h2, h3, h4, h5, h6, li, p):not(.run-in) {
				margin-block-end: 2.35rem;
			}

			.wordswordswords__safe-area h1 {
				color: var(--color-accent);
				font-size: 1.4rem;
				font-variant-caps: all-small-caps;
				font-weight: 400;
				margin-block-end: 1.35rem;
			}

			.wordswordswords__safe-area :where(p, ul) {
				max-inline-size: 30rem;
			}

			.wordswordswords__safe-area > p:first-of-type {
				font-family: var(--font-serif);
				font-size: 2rem;
				line-height: 1.3;
				margin-block-end: 6rem;
				max-inline-size: unset;
				text-wrap: balance;
			}

			.wordswordswords li:not(:last-child) {
				margin-block-end: 0.675rem;
			}

			.wordswordswords li::marker {
				color: var(--color-fg-2);
			}
		}
	</style>
	<div class="wordswordswords__safe-area">
		<h1>{{ title }}</h1>
		{{ content }}
	</div>
</section>
