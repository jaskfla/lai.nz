---
layout: base.liquid
---

<section class='wordswordswords'>
	<style>
		.wordswordswords {
			padding-left: var(--top-level-padding-left);
			padding-right: var(--top-level-padding-right);
		}

		.wordswordswords__safe_area {
			font-size: 1.4rem;
			inline-size: 100%;
			line-height: 1.45;
			margin-inline: auto;
			max-inline-size: var(--content-width);
			padding-block: 8rem;
		}

		.wordswordswords__safe_area h1 {
			color: var(--color-accent);
			font-size: 1.4rem;
			font-variant-caps: all-small-caps;
			font-weight: 400;
			margin-block-end: 2rem;
		}

		.wordswordswords__safe_area p {
			margin-block-end: 2rem;
			max-inline-size: 30rem;
		}

		.wordswordswords__safe_area > p:first-of-type {
			font-family: var(--font-stack-serif);
			font-size: 2rem;
			line-height: 1.3;
			margin-block-end: 3rem;
			max-inline-size: 100%;
			text-wrap: balance;
		}

		.wordswordswords ul {
			list-style-position: inside;
		}

		.wordswordswords ul li {
			margin-block-end: 1rem;
		}

		.wordswordswords ul li::marker {
			color: var(--color-fg-2);
		}
	</style>
	<div class='wordswordswords__safe_area'>
		<h1>{{ title }}</h1>
		{{ content }}
	</div>
</section>
