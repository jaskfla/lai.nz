		<link
			rel="preload"
			href="/fonts/WarblerTextV1.2.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="preload"
			href="/fonts/Concourse_4.woff2"
			as="font"
			type="font/woff2"
			media="(prefers-color-scheme: light)"
			crossorigin
		/>
		<link
			rel="preload"
			href="/fonts/Concourse_3.woff2"
			as="font"
			type="font/woff2"
			media="(prefers-color-scheme: dark)"
			crossorigin
		/>

		<link rel="stylesheet" media="all" href="/style/styles.css" />

		<link rel="icon" href="favicon.ico" sizes="48x48" />
		<link rel="icon" href="/meta/favicon.svg" sizes="any" type="image/svg+xml" />
		<link rel="mask-icon" href="/meta/mask-icon.svg" color="#303030" />
		<link rel="apple-touch-icon" sizes="256x256" href="apple-touch-icon.png" />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/meta/apple-touch-icon-180x180.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="167x167"
			href="/meta/apple-touch-icon-167x167.png"
		/>
